{% extends 'base.html.twig' %}

{% block title %}Quest index{% endblock %}

{% block body %}
<div class="container">
    <div class="border rounded shadow p-3 mb-5 bg-white rounded offset-1 w-100 d-flex justify-content-center col-10  ">
        <h1 class="titreSucces">Quest </h1>
    </div>
<div class="row">
    <div class="row justify-content-center offset-1">
        {% for quest in quests %}
        <div class="col-3 border m-3 rounded shadow p-3 mb-5 bg-white rounded ml-5">
                <div class="card-body">
                    <h5 class="card-title">{{ quest.name }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted"> EXP: {{ quest.exp }}</h6>
                    <p class="card-text">{{ quest.Description }}</p>
                    <a href="#" class="card-link">Validate</a>
                </div>
        </div>
        {% else %}
            no records found
        {% endfor %}

    </div>
    <a class="favorite styled rounded mx-auto d-block" href="/dashboard">
        <button class="rounded" type="button">
            Return
        </button>
    </a>
</div>



{% endblock %}
