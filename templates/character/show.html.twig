{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Health</th>
                <td>{{ character.health }}</td>
            </tr>
            <tr>
                <th>Attack</th>
                <td>{{ character.attack }}</td>
            </tr>
            <tr>
                <th>Total_exp</th>
                <td>{{ character.totalExp }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
